<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TravelAssistant.View.ReminderPage" Title="Создать напоминание">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Готово"
                     Clicked="OnDoneClicked">
        </ToolbarItem>
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Padding="10">
                <Editor x:Name="Name" Placeholder="Введите напоминание"  FontSize="Large"
                    AutoSize="TextChanges"
                   ></Editor>
                <Editor x:Name="Description" Placeholder="Введите заметку" AutoSize="TextChanges"
                   ></Editor>
                <StackLayout Orientation="Horizontal">
                    <Label Margin="10,0,0,0" VerticalOptions="Center" FontSize="Medium" Text="Напомнить по дате и времени." TextColor="Black"/>
                    <Switch x:Name="styleSwitch" IsToggled="False" HorizontalOptions="EndAndExpand"/>
                </StackLayout>

                <DatePicker x:Name="DateReminder" IsVisible="False"
                        MinimumDate="{Binding MinDate}"
                        Date="{Binding SelectedDate}">
                    <DatePicker.Triggers>
                        <DataTrigger TargetType="DatePicker"
                                 Binding="{Binding Source={x:Reference styleSwitch}, Path=IsToggled}"
                                 Value="False">
                            <Setter Property="IsVisible"
                                Value="True"/>
                            <Setter Property="IsVisible"
                                Value="False" />
                        </DataTrigger>
                    </DatePicker.Triggers>
                </DatePicker>
                <TimePicker x:Name="TimeReminder" IsVisible="False"
                        Time="{Binding SelectedTime}">
                    <TimePicker.Triggers>
                        <DataTrigger TargetType="TimePicker"
                                 Binding="{Binding Source={x:Reference styleSwitch}, Path=IsToggled}"
                                 Value="False">
                            <Setter Property="IsVisible"
                                Value="True"/>
                            <Setter Property="IsVisible"
                                Value="False" />
                        </DataTrigger>
                    </TimePicker.Triggers>

                </TimePicker>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>
